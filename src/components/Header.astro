<header class="relative w-full py-6 px-4 text-center shadow-2xl border-b border-[#0D0D0D] letras-futurista flex items-center">
  <!-- Ícono clickeable -->
  <a href="#" id="homeLink" class="flex items-center">
    <img src="/WoWAmigos/phogar.ico" alt="Icono de inicio" class="w-10 h-10 cursor-pointer" />
    <!-- Barra de carga mejorada -->
    <div id="loadingBar" class="ml-4 h-2 md:h-3 w-32 md:w-48 rounded-full border border-[#FFD700] shadow-lg bg-gradient-to-r from-[#FF9500] to-[#FFD700] transition-all duration-1500 ease-in-out" style="width:0; opacity:0;"></div>
  </a>
  
  <div class="flex-grow text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-wider text-transparent bg-clip-text bg-gradient-to-r from-[#FF4444] via-[#FFA07A] to-[#EEEEEE] drop-shadow-lg leading-normal"
        style="background-size: 250%; background-position: center;">
      WoWAmigos
    </h1>
    <p class="mt-4 text-lg md:text-xl text-[#FFD2D2] font-semibold drop-shadow-md">
      Comunidad y Estrategia
    </p>
  </div>
</header>

<script>
  const homeLink = document.getElementById("homeLink");
  const loadingBar = document.getElementById("loadingBar");
  homeLink.addEventListener("click", function(event) {
    event.preventDefault();
    loadingBar.style.opacity = "1";
    loadingBar.style.width = "0";
    loadingBar.style.transition = "none";
    // Forzar reflow para reiniciar la animación
    void loadingBar.offsetWidth;
    loadingBar.style.transition = "width 1.5s cubic-bezier(0.4,0,0.2,1), opacity 0.3s";
    loadingBar.style.width = loadingBar.classList.contains('md:w-48') ? '12rem' : '8rem';
    setTimeout(() => {
      loadingBar.style.opacity = "0";
      window.location.href = "";
    }, 1500);
  });
</script>
