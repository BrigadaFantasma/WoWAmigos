    <div class="relative">
      <svg width="100" height="100" viewBox="0 0 100 100" class="drop-shadow-[0_0_32px_#A52A2A] animate-pulse">
        <circle cx="50" cy="50" r="40" fill="#8B0000" filter="url(#glow)" />
        <text x="50%" y="55%" text-anchor="middle" fill="#EEEEEE" font-size="2.5rem" font-family="Orbitron, Arial, sans-serif" dy=".3em" font-weight="bold"
