        <div class="animate-ping absolute w-2 h-2 bg-[#0D0D0D] rounded-full left-2/3 top-1/3 opacity-70"></div>
        <div class="animate-ping absolute w-1.5 h-1.5 bg-[#B22222] rounded-full left-1/2 top-2/3 opacity-60"></div>
        <div class="animate-ping absolute w-2 h-2 bg-[#A52A2A] rounded-full left-3/4 top-1/2 opacity-90"></div>
      </div>
    </div>
    <h1 class="mt-6 text-3xl md:text-4xl font-extrabold tracking-wider text-transparent bg-clip-text bg-gradient-to-r from-[#FF4444] via-[#FFC0CB] to-[#EEEEEE] drop-shadow-[0_2px_16px_#A52A2A] leading-normal animate-pulse letras-futurista">
      WoWAmigos
    </h1>
  </div>
</div>

<script>
window.addEventListener("load", () => {
  setTimeout(() => {
    const splash = document.getElementById("splash-screen");
    if (splash) {
      splash.style.opacity = "0";
      setTimeout(() => {
        splash.style.display = "none";
      }, 500);
    }
  }, 2000);
});
</script>
